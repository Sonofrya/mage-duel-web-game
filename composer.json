{
    "name": "magegame/mage-game",
    "description": "Multiplayer card game with WebSocket support",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Mage Game Team",
            "email": "team@magegame.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "cboden/ratchet": "^0.4.4",
        "textalk/websocket": "^1.5",
        "ratchet/pawl": "^0.4.1",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.0",
        "predis/predis": "^2.0",
        "ramsey/uuid": "^4.7",
        "firebase/php-jwt": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.21"
    },
    "autoload": {
        "psr-4": {
            "MageGame\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MageGame\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs src/",
        "cs-fix": "phpcbf src/",
        "stan": "phpstan analyse src/",
        "quality": [
            "@cs-check",
            "@stan",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
